{
  "name": "@jerni/jerni-3",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/createJourney.js",
  "types": "./dist/createJourney.d.ts",
  "bin": {
    "jerni": "./dist/cli.js"
  },
  "engines": {
    "bun": "1.2.8"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/mdast": "^4.0.4",
    "bytes": "^3.1.2",
    "hash-sum": "^2.0.0",
    "json5": "^2.2.3",
    "lodash": "^4.17.21",
    "mdast-util-from-markdown": "^2.0.1",
    "mdast-util-frontmatter": "^2.0.1",
    "mdast-util-to-markdown": "^2.1.0",
    "micromark-extension-frontmatter": "^2.0.0",
    "mongodb": "^6.8.0",
    "ms": "^2.1.3",
    "nanoid": "^4.0.2",
    "picocolors": "^1.0.0",
    "pretty-bytes": "^6.1.1",
    "pretty-ms": "^9.1.0",
    "read-package-up": "^11.0.0",
    "typescript": "^5.2.2",
    "yaml": "^2.4.5"
  },
  "scripts": {
    "//postinstall": "node ./scripts/download-binary.js",
    "bump-patch": "bun ./scripts/bump-version.js patch",
    "bump-minor": "bun ./scripts/bump-version.js minor",
    "bump-major": "bun ./scripts/bump-version.js major",
    "build-dev-tools": "bun build --entrypoints ./src/dev-cli/ensureMarkDownFileExists.ts ./src/dev-cli/appendEventsToMarkdown.ts ./src/dev-cli/readEventsFromMarkDown.ts ./src/dev-cli/rewriteChecksum.ts  --outdir ./build --target bun --format esm --packages external --root .",
    "build": "bun ./scripts/build-npm.js",
    "prepublishOnly": "bun run build",
    "clean": "rm -rf dist",
    "release": "bun run build && npm publish ./dist"
  },
  "exports": {
    ".": {
      "types": "./dist/createJourney.d.ts",
      "default": "./dist/createJourney.js"
    },
    "./types": {
      "types": "./dist/lib/exported_types.d.ts",
      "default": "./dist/lib/exported_types.js"
    },
    "./lib/mapEvents": {
      "types": "./dist/lib/mapEvents.d.ts",
      "default": "./dist/lib/mapEvents.js"
    },
    "./lib/errors/JerniPersistenceError": {
      "types": "./dist/JerniPersistenceError.d.ts",
      "default": "./dist/JerniPersistenceError.js"
    },
    "./lib/errors/UnrecoverableError": {
      "types": "./dist/UnrecoverableError.d.ts",
      "default": "./dist/UnrecoverableError.js"
    },
    "./lib/skip": {
      "types": "./dist/lib/skip.d.ts",
      "default": "./dist/lib/skip.js"
    },
    "./lib/begin": {
      "types": "./dist/begin.d.ts",
      "default": "./dist/begin.js"
    },
    "./test/testWrapper": {
      "types": "./dist/lib/testWrapper.d.ts",
      "default": "./dist/lib/testWrapper.js"
    },
    "./dev-cli/appendEventsToMarkdown": {
      "types": "./dist/dev-cli/appendEventsToMarkdown.d.ts",
      "default": "./dist/dev-cli/appendEventsToMarkdown.js"
    },
    "./dev-cli/readEventsFromMarkdown": {
      "types": "./dist/dev-cli/readEventsFromMarkDown.d.ts",
      "default": "./dist/dev-cli/readEventsFromMarkDown.js"
    },
    "./dev-cli/rewriteChecksum": {
      "types": "./dist/dev-cli/rewriteChecksum.d.ts",
      "default": "./dist/dev-cli/rewriteChecksum.js"
    },
    "./dev-cli/ensureMarkdownFileExists": {
      "types": "./dist/dev-cli/ensureMarkDownFileExists.d.ts",
      "default": "./dist/dev-cli/ensureMarkDownFileExists.js"
    }
  },
  "devDependencies": {
    "@types/bytes": "^3.1.4",
    "@types/ms": "^0.7.34",
    "@types/pretty-ms": "^5.0.1"
  }
}