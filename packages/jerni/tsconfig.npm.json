  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "noEmit": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true
